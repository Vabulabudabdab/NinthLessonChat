<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <com.stelladk.arclib.ArcLayout
        android:id="@+id/message_one"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_message"
        android:gravity="center"
        android:orientation="horizontal"
        app:ArcRadius="21dp"
        app:ArcType="inner"
        app:BottomLeftArc="outer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_s"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/user_s" />

        <TextView
            android:id="@+id/text_message_one"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:layout_marginStart="90dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_message"
            android:text="@string/message_one"
            android:textColor="@color/text_message"
            android:textSize="19sp" />

    </com.stelladk.arclib.ArcLayout>

    <com.stelladk.arclib.ArcLayout
        android:id="@+id/message_second"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_message"
        android:gravity="center"
        android:orientation="horizontal"
        app:ArcRadius="21dp"
        app:ArcType="inner"
        app:BottomLeftArc="outer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/user_b"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/user_b" />

    <TextView
        android:id="@+id/text_message_second"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="90dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_message"
        android:text="@string/message_second"
        android:textColor="@color/text_message"
        android:textSize="19sp" />
    </com.stelladk.arclib.ArcLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>